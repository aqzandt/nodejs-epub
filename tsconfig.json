{
  "compilerOptions": {
    "outDir": "./dist/src",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "module": "Node16",
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules"]
}